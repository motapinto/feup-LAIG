<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="sun" file="scenes/images/sun.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="other" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="1.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="1.0" b="0.0" a="1.0" />
            <specular r="0.0" g="1.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="rect21">
            <rectangle2 x1="0" y1="0" x2="1" y2="1" corneroffset="100"/>
        </primitive>
        <primitive id="rect22">
            <rectangle2 x1="0" y1="0" x2="1" y2="1" corneroffset="20"/>
        </primitive>
        <primitive id="rect23">
            <rectangle2 x1="0" y1="0" x2="1" y2="1" corneroffset="0.05"/>
        </primitive>
    </primitives>

    <components>
        <component id="one">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <matmark id="other"/>
            <children>
                <primitiveref id="rect21" />
            </children>
        </component>
        <component id="two">
            <transformation>
                <translate x="0" y="0" z="2" />
            </transformation>
            <materials>
                <material id="other" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="rect22" />
            </children>
        </component>
        <component id="three">
            <transformation>
                <translate x="0" y="0" z="4" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="rect23" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="sun" length_s="2" length_t="2"/>
            <children>
                <componentref id="one" />
                <componentref id="two" />
                <componentref id="three" />
            </children>
        </component>
    </components>
</lxs>