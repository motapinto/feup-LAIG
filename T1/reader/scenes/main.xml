<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="tableXY">
            <scale x="0.5" y="0.5" z="0" />
        </transformation>
    </transformations>

    <primitives>
        <!-- TABLE -->
         <primitive id="tableLeg">
            <cylinder base="0.1" top="0.1" height="1" slices="20" stacks="5" />
        </primitive>
        <primitive id="tableSupport">
            <cylinder base="0.5" top="0.1" height="0.2" slices="4" stacks="4" />
        </primitive>
        <primitive id="tableTop">
            <cylinder base="0.8" top="0.8" height="0.1" slices="4" stacks="4" />
        </primitive>
        <primitive id="tableCover">
            <rectangle x1="0" y1="1.13" x2="0" y2="1.13" />
        </primitive>

        <!-- CHAIR -->
        <primitive id="chairLeg1">
            <cylinder base="0.05" top="0.05" height="0.5" slices="4" stacks="4" />
        </primitive>
        <primitive id="chairLeg2">
            <cylinder base="0.05" top="0.05" height="0.8" slices="4" stacks="4" />
        </primitive>
        <primitive id="chairSupport">
            <cylinder base="0.45" top="0.45" height="0.07" slices="4" stacks="4" />
        </primitive>
        <primitive id="chairBase">
            <cylinder base="0.4" top="0.4" height="0.2" slices="4" stacks="4" />
        </primitive>
        <primitive id="chairSupportCover">
            <rectangle x1="0" y1="0.64" x2="0" y2="0.64" />
        </primitive>
        </primitive>
        <primitive id="chairBaseCover">
            <rectangle x1="0" y1="0.57" x2="0" y2="0.57" />
        </primitive>
    </primitives>

    <components>
        <!-- TABLE -->
        <component id="tableLeg">
            <transformation>
                <transformationref id="tableXY" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <primitiveid id="tableLeg" />
            </children>
        </component>
        <component id="tableSupport">
            <transformation>
                <transformationref id="tableXY" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <primitiveid id="tableSupport" />
            </children>
        </component>
        <component id="tableTop">
            <transformation>
                <transformationref id="tableXY" />
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <primitiveid id="tableTop" />
            </children>
        </component>
        <component id="tableCover">
            <transformation>
                <translate x="0" y="-0.8" z="1" />
                <rotate axis="z" angle="45" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <primitiveid id="tableCover" />
            </children>
        </component>
        <component id="table">
            <transformation>
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <componentref id="tableLeg" />
                <componentref id="tableSupport" />
                <componentref id="tableTop" />
                <componentref id="tableCover" />
            </children>
        </component>
        <component id="table1">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <componentref id="table" />
            </children>
        </component>
        <component id="table2">
            <transformation>
                <translate x="3" y="0" z="0" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <componentref id="table" />
            </children>
        </component>
        <component id="table3">
            <transformation>
                <translate x="0" y="3" z="0" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <componentref id="table" />
            </children>
        </component>
        <component id="table4">
            <transformation>
                <translate x="3" y="3" z="0" />
            </transformation>
            <materials>
                <material id="defaultMaterial" />
            </materials>
            <texture id="nullTexture"/>
            <children>
                <componentref id="table" />
            </children>
        </component>

        <!-- CHAIR -->
    </components>
</lxs>