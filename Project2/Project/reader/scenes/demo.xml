<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="0" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/parking-lot.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>
        <animation id="demoAnim" >
            <keyframe instant="20">
                <translate x="0" y="0" z="-50" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="0.1" y="0.1" z="0.1" />
            </keyframe>
        </animation>               
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="40" y2="3" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle   x1="0" y1="3" z1="0"
                        x2="-3" y2="0" z2="0"
                        x3="3" y3="0" z3="0" />        
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="2" slices="21" stacks="5" />        
        </primitive>
        <primitive id="demoTorus">
            <torus inner="2" outer="4" slices="5" loops="11" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="4" top="4" height="4" slices="12" stacks="10" />
        </primitive>
        <primitive id="demoPlane">
           <plane npartsU="2" npartsV="2" />
        </primitive>
        <primitive id="demoPatch">
            <patch npointsU="1" npointsV="1" npartsU="1" npartsV="1" >
                <controlpoint xx="1.0" yy="1.0" zz="1.0" />
            </patch>
        </primitive>

    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoPatch" />
            </children>
        </component>
    </components>
</lxs>