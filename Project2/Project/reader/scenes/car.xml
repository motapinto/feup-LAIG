<lxs>
    <scene root="Car" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
      <texture id="tire" file="scenes/images/tire.jpg"/>
    </textures>

    <materials>
        <material id="Black" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.12" g="0.12" b="0.12" a="1.0" />
            <diffuse r="0.12" g="0.12" b="0.12" a="1.0" />
            <specular r="0.12" g="0.12" b="0.12" a="1.0" />
        </material>
        <material id="Window" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.8" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.8" a="1.0" />
            <specular r="0.4" g="0.4" b="0.8" a="1.0" />
        </material>
        <material id="Body" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.8" g="0.2" b="0.2" a="1.0" />
            <specular r="0.8" g="0.2" b="0.2" a="1.0" />
        </material>
        <material id="White" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0.8" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>
        <animation id="WheelSpin" >
            <keyframe instant="100">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="15000" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>               
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="40" y2="3" />
        </primitive>

        <primitive id="carFront">
          <rectangle x1="0" y1="0" x2="2.83" y2="1.5" />
        </primitive>
        <primitive id="carBack">
          <rectangle x1="0" y1="0" x2="2.83" y2="1" />
        </primitive>
        <primitive id="carSide">
          <rectangle x1="0" y1="0" x2="1.06" y2="1.12" />
        </primitive>
        <primitive id="carBottom">
          <rectangle x1="0" y1="0" x2="2.83" y2="5.66" />
        </primitive>
        <primitive id="carAround">
          <cylinder2 base="4" top="4" height="1" slices="2" stacks="2" />
        </primitive>
        <primitive id="carWindowSide">
            <triangle  x1="0" y1="0" z1="0"
                        x2="0" y2="0" z2="1.06"
                        x3="0" y3="1.06" z3="0" />  
        </primitive>
        <primitive id="WheelCenter">
          <sphere radius="0.282" slices="40" stacks="40" />
        </primitive>
        <primitive id="Axis">
          <cylinder2 base="0.05" top="0.05" height="2.83" slices="40" stacks="20" />
        </primitive>
        <primitive id="WheelOut">
          <torus inner="0.1" outer="0.2" slices="20" loops="40" />
        </primitive>
    </primitives>

    <components>
        <component id="Car">
            <transformation>
              <!-- <rotate axis="z" angle="180"/> -->
            </transformation>
            <materials>
                <material id="Body" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="carBody" />
                <componentref id="AxisFront" />
                <componentref id="AxisBack" />
            </children>
        </component>
        <component id="AxisFront">
          <transformation>
            <translate x="0" y="-1.4" z="0.28"/>
          </transformation>
          <animationref id="WheelSpin" />
          <materials>
            <material id="White" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="Axis" />
            <componentref id="wheelFrontRight" />
            <componentref id="wheelFrontLeft" />
          </children>
        </component>
        <component id="AxisBack">
          <transformation>
            <translate x="0" y="1.4" z="0.28"/>
          </transformation>
          <animationref id="WheelSpin" />
          <materials>
            <material id="White" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="Axis" />
            <componentref id="wheelBackRight" />
            <componentref id="wheelBackLeft" />
          </children>
        </component>
        <component id="Axis">
          <transformation>
            <translate x="-1.415" y="0" z="0"/>
            <rotate axis="y" angle="90"/>
          </transformation>
          <materials>
            <material id="White" />
          </materials>
          <texture id="none"/>
          <children>
            <primitiveref id="Axis" />
          </children>
        </component>
        <component id="wheelFrontRight">
          <transformation>
            <translate x="-1.8" y="0" z="0"/>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="wheel" />
          </children>
        </component>
        <component id="wheelFrontLeft">
          <transformation>
            <translate x="0.92" y="0" z="0"/>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="wheel" />
          </children>
        </component>
        <component id="wheelBackRight">
          <transformation>
            <translate x="-1.8" y="0" z="0"/>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="wheel" />
          </children>
        </component>
        <component id="wheelBackLeft">
          <transformation>
            <translate x="0.92" y="0" z="0"/>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="wheel" />
          </children>
        </component>
        <component id="wheel">
          <transformation>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="none"/>
          <children>
            <componentref id="wheelCenter" />
            <componentref id="wheelOut" />
          </children>
        </component>
        <component id="wheelCenter">
          <transformation>
            <translate x="0.4" y="0" z="0"/>
            <scale x="0.4" y="1" z="1"/>
          </transformation>
          <materials>
            <material id="inherit" />
          </materials>
          <texture id="inherit"/>
          <children>
            <primitiveref id="WheelCenter" />
          </children>
        </component>
        <component id="wheelOut">
          <transformation>
            <translate x="0.4" y="0" z="0"/>
            <rotate axis="y" angle="90"/>
          </transformation>
          <materials>
            <material id="White" />
          </materials>
          <texture id="tire"/>
          <children>
            <primitiveref id="WheelOut" />
          </children>
        </component>
        <component id="carBody">
            <transformation>
              <translate x="0" y="0" z="0.6"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="carFront" />
                <componentref id="carFrontWindow" />
                <componentref id="carBack" />
                <componentref id="carBackWindow" />
                <componentref id="carTop" />
                <componentref id="carAround" />
                <componentref id="carSideWindow" />
                <componentref id="carBottom" />
            </children>
        </component>
        <component id="carFront">
            <transformation>
              <translate x="-1.415" y="-2.83" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carTop">
            <transformation>
              <translate x="-1.415" y="-0.3" z="2.06"/>
              <scale x="1" y="0.74" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carBack">
            <transformation>
              <translate x="-1.415" y="1.85" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carBack" />
            </children>
        </component>
        <component id="carFrontWindow">
            <transformation>
              <translate x="-1.415" y="-1.34" z="1"/>
              <rotate axis="x" angle="45"/>
            </transformation>
            <materials>
                <material id="Window" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carBackWindow">
            <transformation>
              <translate x="-1.415" y="0.8" z="2.06"/>
              <rotate axis="x" angle="-45"/>
            </transformation>
            <materials>
                <material id="Window" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carSideWindow">
            <transformation>
            </transformation>
            <materials>
                <material id="Window" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="carWindowSideBackRight" />
                <componentref id="carWindowSideBackLeft" />
                <componentref id="carWindowSideFrontRight" />
                <componentref id="carWindowSideFrontLeft" />
                <componentref id="carSideRight" />
                <componentref id="carSideLeft" />
            </children>
        </component>
        <component id="carWindowSideFrontRight">
            <transformation>
              <translate x="-1.415" y="-0.28" z="1"/>
              <scale x="-1" y="-1" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carWindowSide" />
            </children>
        </component>
        <component id="carWindowSideFrontLeft">
            <transformation>
              <translate x="1.415" y="-0.28" z="1"/>
              <scale x="-1" y="-1" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
              <primitiveref id="carWindowSide" />
            </children>
        </component>
        <component id="carWindowSideBackRight">
            <transformation>
              <translate x="-1.415" y="0.82" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carWindowSide" />
            </children>
        </component>
        <component id="carWindowSideBackLeft">
            <transformation>
              <translate x="1.415" y="0.82" z="1"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
              <primitiveref id="carWindowSide" />
            </children>
        </component>
        <component id="carSideRight">
            <transformation>
              <translate x="-1.415" y="-0.3" z="1"/>
              <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carSide" />
            </children>
        </component>        
        <component id="carSideLeft">
            <transformation>
              <translate x="1.415" y="-0.3" z="1"/>
              <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carSide" />
            </children>
        </component>    
        <component id="carAround">
            <transformation>
              <scale x="0.5" y="1" z="1"/>
              <rotate axis="z" angle="45"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carAround" />
            </children>
        </component>  
        <component id="carBottom">
          <transformation>
            <translate x="-1.415" y="-2.83" z="0"/>
          </transformation>
          <materials>
              <material id="Black" />
          </materials>
          <texture id="none"/>
          <children>
              <primitiveref id="carBottom" />
          </children>
        </component>  
    </components>
</lxs>