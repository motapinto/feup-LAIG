<lxs>
    <scene root="Car" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>
        <animation id="demoAnim" >
            <keyframe instant="20">
                <translate x="0" y="0" z="-50" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="0.1" y="0.1" z="0.1" />
            </keyframe>
        </animation>               
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="40" y2="3" />
        </primitive>

        <primitive id="carFront">
          <rectangle x1="0" y1="0" x2="2.83" y2="1.5" />
        </primitive>
        <primitive id="carBack">
          <rectangle x1="0" y1="0" x2="2.83" y2="1" />
        </primitive>
        <primitive id="carAround">
          <cylinder2 base="4" top="4" height="1" slices="2" stacks="2" />
        </primitive>
        <primitive id="carWindowSideFront">
            <triangle  x1="0" y1="0" z1="0"
                        x2="0" y2="0" z2="1.06"
                        x3="0" y3="-1.06" z3="0" />  
        </primitive>
        <primitive id="carWindowSideBack">
            <triangle  x1="0" y1="0" z1="0"
                        x2="0" y2="0" z2="1.06"
                        x3="0" y3="1.06" z3="0" />  
        </primitive>
        
    </primitives>

    <components>
        <component id="Car">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="carFront" />
                <componentref id="carFrontWindow" />
                <componentref id="carBack" />
                <componentref id="carBackWindow" />
                <componentref id="carTop" />
                <componentref id="carAround" />
                <componentref id="carSideWindow" />
            </children>
        </component>
        <component id="carFront">
            <transformation>
              <translate x="-1.415" y="-2.83" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carFrontWindow">
            <transformation>
              <translate x="-1.415" y="-1.34" z="1"/>
              <rotate axis="x" angle="45"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carTop">
            <transformation>
              <translate x="-1.415" y="-0.3" z="2.06"/>
              <scale x="1" y="0.74" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carBackWindow">
            <transformation>
              <translate x="-1.415" y="0.8" z="2.06"/>
              <rotate axis="x" angle="-45"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carFront" />
            </children>
        </component>
        <component id="carBack">
            <transformation>
              <translate x="-1.415" y="1.85" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carBack" />
            </children>
        </component>
        <component id="carSideWindow">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="carWindowSideBackRight" />
                <componentref id="carWindowSideBackLeft" />
            </children>
        </component>
        <component id="carWindowSideBackRight">
            <transformation>
              <translate x="-1.415" y="0.8" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carWindowSideBack" />
            </children>
        </component>
        <component id="carWindowSideBackLeft">
            <transformation>
              <scale x="-1" y="1" z="1"/>
              <translate x="-1.415" y="0.8" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carWindowSideBack" />
            </children>
        </component>
        <component id="carAround">
            <transformation>
              <scale x="0.5" y="1" z="1"/>
              <rotate axis="z" angle="45"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="carAround" />
            </children>
        </component>
    </components>
</lxs>