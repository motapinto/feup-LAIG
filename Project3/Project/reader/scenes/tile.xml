<lxs>
    <scene root="RedPiece" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/parking-lot.jpg" />
        <texture id="road" file="scenes/images/highway-road.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="Red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>
    </materials>

    <transformations>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="1" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="rectangle">
            <plane npartsU="1" npartsV="1" />
        </primitive>
        <primitive id="cylinder">  
            <cylinder base="1" top="1" height="1" slices="25" stacks="25" />
        </primitive>
        <primitive id="sphere">  
            <sphere radius="1" slices="40" stacks="20" />
        </primitive>
        <primitive id="torus">  
            <torus inner="1" outer="2" slices="20" loops="20" />
        </primitive>  
        <primitive id="cylinder4">  
            <cylinder2 base="1" top="1" height="1" slices="2" stacks="1" />
        </primitive> 
    </primitives>

    <components>
        <component id="demoRoot" pickable="true">
            <transformation>
                <scale x="1" y="1" z="0.2"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="2" length_t="2"/>
            <children>
                <componentref id="BoardCover" />
                <componentref id="BoardSide" />
            </children>
        </component>
        <component id="BoardCover">
            <transformation>
                <scale x="1.4142" y="1.4142" z="1"/>
                <translate x="0" y="0" z="1"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="BoardSide">
            <transformation>
                <rotate axis="z" angle="45"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder4" />
            </children>
        </component>
        <component id="RedPiece">
            <transformation>
                <scale x="0.5" y="0.5" z="0.2" />
            </transformation>
            <materials>
                <material id="Red" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Top">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Cover">
            <transformation>
                <scale x="1" y="1" z="0.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</lxs>