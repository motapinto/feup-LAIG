<?xml version='1.0'?>
<!DOCTYPE FILES [
    <!ENTITY tableTransformations SYSTEM "table/tableTransformations.xml">
    <!ENTITY tableTextures SYSTEM "table/tableTextures.xml">
    <!ENTITY tablePrimitives SYSTEM "table/tablePrimitives.xml">
    <!ENTITY tableMaterials SYSTEM "table/tableMaterials.xml">
    <!ENTITY tableComponents SYSTEM "table/tableComponents.xml">
]>

<lxs>

    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        &tableTextures;
        <texture id="border" file="scenes/images/border.png" />
    </textures>

    <materials>
        &tableMaterials;

        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="Red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="Yellow" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.5" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="Blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="1" a="1.0" />
            <specular r="0.5" g="0.5" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        &tableTransformations;
    </transformations>

    <animations>
    </animations>

    <primitives>
        &tablePrimitives;

        <!-- PIECE -->
        <primitive id="cylinder">  
            <cylinder base="1" top="1" height="1" slices="50" stacks="25" />
        </primitive>
        <primitive id="sphere">  
            <sphere radius="1" slices="50" stacks="25" />
        </primitive>

        <!-- TILE -->
        <primitive id="hexagon">  
            <hexagon radius="1" />
        </primitive> 
        <primitive id="tileBase">  
            <cylinder base="1" top="1" height="0.5" slices="6" stacks="1" />
        </primitive> 
    </primitives>

    <components>

        &tableComponents;

        <component id="demoRoot" pickable="true">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="2" length_t="2"/>
            <children>
                <componentref id="Table" />
            </children>
        </component>

        <component id="Tile">
            <transformation>
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="TileCover" />
                <componentref id="TileSide" />
            </children>
        </component>
        <component id="TileCover">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
                <scale x="1" y="1" z="0.1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="hexagon" />
            </children>
        </component>
        <component id="TileSide">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="tileBase" />
            </children>
        </component>

        <component id="Piece1">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Red" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Piece2">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Yellow" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Piece3">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Blue" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>

        <component id="Top">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Cover">
            <transformation>
                <scale x="1" y="1" z="0.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</lxs>