<lxs>

    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="5" z="5" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="darkCement" file="scenes/images/dark-cement.jpg" />
        <texture id="aluminium" file="scenes/images/aluminium.jpg" />
        <texture id="table" file="scenes/images/table.png" />
        <texture id="donut" file="scenes/images/donut-texture.png" />
    </textures>

    <materials>
        <material id="plate" shininess="100">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="0.2" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.7" g="0.7" b="0.7" a="1.0" />
        </material>
        <material id="plateM" shininess="100">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.1" b="0.05" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0.1" a="1.0" />
            <specular r="0.8" g="0.4" b="0.2" a="1.0" />
        </material>
        <material id="tableTop" shininess="5">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.2" g="0.2" b="0.2" a="1.0" />
        </material>
        <material id="tableBottom" shininess="1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.2" g="0.2" b="0.2" a="1.0" />
            <specular r="0.7" g="0.7" b="0.7" a="1.0" />
        </material>
        <material id="tableBottom1" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0.2" a="1.0" />
            <specular r="1.0" g="0.7" b="0.7" a="1.0" />
        </material>

        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="Red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.5" b="0.5" a="1.0" />
            <diffuse r="1.0" g="0.5" b="0.5" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </material>
        <material id="Yellow" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.5" g="1.0" b="1.0" a="1.0" />
            <specular r="0.5" g="1.0" b="1.0" a="1.0" />
        </material>
        <material id="Blue" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.5" g="0.5" b="1" a="1.0" />
            <diffuse r="0.5" g="0.5" b="1" a="1.0" />
            <specular r="0.5" g="0.5" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="TableXY">
            <translate x="0.5" y="0.5" z="0" />
        </transformation>
        <transformation id="TableCover">
                <translate x="0" y="-0.8" z="1.1" />
                <rotate axis="z" angle="45" />
                <scale x="1.13" y="1.13" z="1" />
        </transformation>
    </transformations>

    <animations>
    </animations>

    <primitives>
        <primitive id="TableLeg">
            <cylinder2 base="0.1" top="0.1" height="1" slices="10" stacks="1" />
        </primitive>
        <primitive id="TableSupport">
            <cylinder2 base="0.5" top="0.1" height="0.2" slices="2" stacks="1" />
        </primitive>
        <primitive id="TableTop">
            <cylinder2 base="0.8" top="0.8" height="0.1" slices="2" stacks="1" />
        </primitive>
        <primitive id="Napkin">
            <triangle  x1="0" y1="0" z1="0"
                        x2="0" y2="0.25" z2="0"
                        x3="0" y3="0" z3="0.25" 
            />  
        </primitive>

        <!-- PIECE -->
        <primitive id="cylinder">  
            <cylinder base="1" top="1" height="1" slices="50" stacks="25" />
        </primitive>
        <primitive id="sphere">  
            <sphere radius="1" slices="50" stacks="25" />
        </primitive>

        <!-- TILE -->
        <primitive id="hexagon">  
            <hexagon radius="1" />
        </primitive> 
        <primitive id="tileBase">  
            <cylinder base="1" top="1" height="0.5" slices="6" stacks="1" />
        </primitive> 


        <primitive id="torus">  
            <torus inner="1" outer="2" slices="20" loops="20" />
        </primitive> 
        <primitive id="triangle">
            <triangle x1="0" y1="0" z1="1" x2="1" y2="0" z2="0" x3="0" y3="1" z3="0" />
        </primitive>
        <primitive id="rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>

    </primitives>

    <components>
        <component id="Donut1" floor="2">
            <transformation>
                <translate x="-0.2" y="-0.2" z="1.13" />
                <scale x="0.025" y="0.025" z="0.025" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="donut" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="torus" />           
            </children>
        </component>
        <component id="Donut2" floor="2">
            <transformation>
                <translate x="0.4" y="0.4" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="donut" length_s="1" length_t="1"/>
            <children>
                <componentref id="Donut1" />           
            </children>
        </component>
        <component id="Plate1">
            <transformation>
                <translate x="-0.2" y="-0.2" z="1.101" />
                <scale x="1" y="1" z="0.05" />
                <scale x="0.2" y="0.2" z="0.2" />
            </transformation>
            <materials>
                <material id="plate" />
                <material id="plateM" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
        <component id="Plate2">
            <transformation>
                <translate x="0.4" y="0.4" z="0" />
            </transformation>
            <materials>
                <material id="plate" />
                <material id="plateM" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Plate1" />
            </children>
        </component>
        <component id="Napkin1">
            <transformation>
                <translate x="0.2" y="-0.6" z="1.101" />
                <rotate axis="z" angle="90" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="plate" />
                <material id="plateM" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="Napkin" />
            </children>
        </component>
        <component id="Napkin2">
            <transformation>
                <rotate axis="z" angle="180" />
            </transformation>
            <materials>
                <material id="plate" />
                <material id="plateM" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Napkin1" />
            </children>
        </component>
        <component id="TableLeg">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="aluminium" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="TableLeg" />
            </children>
        </component>
        <component id="TableSupport">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="aluminium" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="TableSupport" />
            </children>
        </component>
        <component id="TableTop">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="tableTop" />
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="TableTop" />
            </children>
        </component>
        <component id="TableCover">
            <transformation>
                <transformationref id= "TableCover"/>
            </transformation>
            <materials>
                <material id="tableTop" />
            </materials>
            <texture id="table" length_s="1.13" length_t="1.13"/>
            <children>
                <primitiveref id="rectangle" />
            </children>
        </component>
        <component id="Table">
            <transformation>
                <transformationref id="TableXY" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="Donut1" /> 
                <componentref id="Donut2" /> 
                <componentref id="Plate1" />
                <componentref id="Plate2" />
                <componentref id="Napkin1" />
                <componentref id="Napkin2" />
                <componentref id="TableLeg" />
                <componentref id="TableSupport" />
                <componentref id="TableTop" />
                <componentref id="TableCover" />
            </children>
        </component>

        <component id="demoRoot" pickable="true">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none" length_s="2" length_t="2"/>
            <children>
                <componentref id="Table" />
            </children>
        </component>

        <component id="Tile">
            <transformation>
                <rotate angle="90" axis="z"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="TileCover" />
                <componentref id="TileSide" />
            </children>
        </component>
        <component id="TileCover">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
                <scale x="1" y="1" z="0.1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="hexagon" />
            </children>
        </component>
        <component id="TileSide">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="tileBase" />
            </children>
        </component>

        <component id="Piece1">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Red" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Piece2">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Yellow" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Piece3">
            <transformation>
                <translate x="0" y="0" z="0.55"/>
                <scale x="1" y="1" z="0.2"/>
                <scale x="0.5" y="0.5" z="0.5" />
            </transformation>
            <materials>
                <material id="Blue" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cylinder" />
                <componentref id="Top" />
                <componentref id="Cover" />
            </children>
        </component>

        <component id="Top">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="Cover" />
            </children>
        </component>
        <component id="Cover">
            <transformation>
                <scale x="1" y="1" z="0.7" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="sphere" />
            </children>
        </component>
    </components>
</lxs>